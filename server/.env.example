# ── ToxGuard Server — Environment Configuration ──
# Copy this file to .env and update values for your environment.

# Server
HOST=0.0.0.0
PORT=4000
DEBUG=false

# Security — CHANGE THIS in production!
API_KEY=toxguard-dev-key-change-me

# CORS origins (comma-separated)
# Use ["*"] for development, restrict in production
# Example: ["chrome-extension://YOUR_EXTENSION_ID"]
CORS_ORIGINS=["*"]

# Rate limiting (requests per time window)
RATE_LIMIT=30/minute

# Model paths (relative to server/ directory)
# MODEL_PATH=models/tox_model.h5
# TOKENIZER_PATH=models/tokenizer.pickle

# Input limits
MAX_COMMENTS_PER_REQUEST=500
MAX_COMMENT_LENGTH=500
