{
    "manifest_version": 3,
    "name": "ToxGuard â€” Toxic Comment Detector",
    "version": "1.0.0",
    "description": "Scan any webpage for toxic comments and highlight them with three-tier classification: red (toxic), yellow (medium), green (safe).",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://amgovind-toxguard.hf.space/*",
        "https://*.hf.space/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "Open ToxGuard popup"
        }
    }
}